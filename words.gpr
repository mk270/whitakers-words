project Words is
   for Exec_Dir use "bin";
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use (
      "words.adb", 
      "meanings.adb",
      "makedict.adb", 
      "makeefil.adb", 
      "makeewds.adb", 
      "makeinfl.adb", 
      "makestem.adb", 
      "wakedict.adb" 
   );

   package Compiler is
      Default_Ada := ("-gnatwa", "-Wall");
      Style := ("-gnaty3bfh");
      for Default_Switches ("Ada") use Default_Ada & Style;
   end Compiler;
end Words;
